{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug Express App",
        "type": "node",
        "request": "launch",
        "program": "${workspaceFolder}/src/index.ts",
        "outFiles": ["${workspaceFolder}/dist/**/*.js"],
        "runtimeArgs": ["-r", "ts-node/register"],
        "env": {
          "NODE_ENV": "development"
        },
        "console": "integratedTerminal",
        "restart": true,
        "skipFiles": ["<node_internals>/**"]
      }
    ]
  }